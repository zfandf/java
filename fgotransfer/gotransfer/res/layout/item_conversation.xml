<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/bg_transfer_file_list">

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/c5"
        android:textSize="@dimen/t3" />
    
    <TextView
        android:id="@+id/tv_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/tv_item_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/c5"
        android:textSize="@dimen/t3" />

    <TextView
        android:id="@+id/tv_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_item_status"
        android:layout_toRightOf="@id/iv_item_icon"
        android:layout_below="@id/tv_item_title"
        android:layout_alignParentBottom="true"
        android:textColor="@color/c5"
        android:textSize="@dimen/t3" />
        
</RelativeLayout>