<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

        <Button
            android:id="@+id/btn_create_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_connection" />

        <TextView
            android:id="@+id/tv_create_connection_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/create_connection_hint" />

        <Button
            android:id="@+id/btn_join_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/join_connection" />

        <TextView
            android:id="@+id/tv_join_connection_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/join_connection_hint" />
    </LinearLayout>

    <Button
        android:id="@+id/tv_connect_iphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_nav_name"
        android:text="@string/connect_iphone" />

    <Button
        android:id="@+id/tv_friends_install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_nav_name"
        android:text="@string/friends_install" />

</FrameLayout>