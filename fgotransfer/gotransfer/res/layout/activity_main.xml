<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.m15.app.android.gotransfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ViewFlipper
        android:id="@+id/vf_picture_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cf_picture_indicator"
        android:layout_alignParentTop="true"
        android:animateFirstView="@+id/img_home1"
        android:autoStart="true"
        android:flipInterval="3000" >
    </ViewFlipper>

    <cn.m15.app.android.gotransfer.ui.widget.CircleFlowIndicator
        android:id="@+id/cf_picture_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        app:inactiveType="fill"
        app:radius="5dp"
        app:spacing="10dp" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fl_footer"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/btn_create_connection"
            android:layout_width="226dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btn_home"
            android:drawableLeft="@drawable/ic_link"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="35dp"
            android:text="@string/create_connection"
            android:textColor="@color/c8"
            android:textSize="@dimen/t1" />

        <Button
            android:id="@+id/btn_join_search"
            android:layout_width="226dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_home"
            android:drawableLeft="@drawable/ic_join_search"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="35dp"
            android:text="@string/join_search"
            android:textColor="@color/c8"
            android:textSize="@dimen/t1" />

        <Button
            android:id="@+id/btn_share_immediately"
            android:layout_width="226dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_home"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="35dp"
            android:text="@string/share_immediately"
            android:textColor="@color/c8"
            android:textSize="@dimen/t1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="@string/version"
            android:textColor="@color/c3"
            android:textSize="@dimen/t4" />

        <cn.m15.app.android.gotransfer.ui.widget.ShareAppLocker
            android:id="@+id/locker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </FrameLayout>

</RelativeLayout>