<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_files_chooser_list_selector"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <CheckBox
        android:id="@+id/cb_mediafile"
        style="@style/CompoundButton.CustomCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center" />

    <ImageView
        android:id="@+id/img_mediafile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/img_music_default" />

    <cn.m15.app.android.gotransfer.ui.widget.MarqueeTextView
        android:id="@+id/tv_meidafile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_mediafile"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_mediafile"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/c2"
        android:textSize="@dimen/t3" />

    <TextView
        android:id="@+id/tv_mediafile_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_mediafile"
        android:layout_alignLeft="@+id/tv_meidafile_name"
        android:textColor="@color/c5"
        android:textSize="@dimen/t4" />

    <TextView
        android:id="@+id/tv_mediafile_lenth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_mediafile"
        android:textColor="@color/c5"
        android:textSize="@dimen/t4"
        android:visibility="visible" />


</RelativeLayout>