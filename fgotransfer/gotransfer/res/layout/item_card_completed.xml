<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.m15.app.android.gotransfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/bg_transfer_file_list"
    android:orientation="vertical" >

   <LinearLayout
        android:id="@+id/ll_transfer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transfer_file_list_header"
        android:orientation="horizontal"
        android:padding="10dp" >

       

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/c5"
            android:textSize="@dimen/t3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_receiver_avatar_left" />
    </LinearLayout>

    <cn.m15.app.android.gotransfer.ui.widget.ExpandableHeightListView
        android:id="@+id/elv_file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c1"
        android:divider="@drawable/divider"
        android:listSelector="@drawable/transparent"
        app:expanded="true" >
    </cn.m15.app.android.gotransfer.ui.widget.ExpandableHeightListView>

</LinearLayout>