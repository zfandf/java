<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarDivider">@android:color/transparent</item>
        <item name="actionBarItemBackground">@android:color/transparent</item>
        <item name="actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="homeAsUpIndicator">@android:color/transparent</item>
        <item name="switchStyle">@style/Widget.Holo.CompoundButton.Switch</item>
    </style>

    <!-- actionbar style -->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="icon">@drawable/transparent</item>
        <item name="logo">@drawable/ic_actionbar_back_selector</item>
        <item name="background">@color/c8_actionbar</item>
        <item name="height">@dimen/actionbar_height</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="displayOptions">homeAsUp|showHome|showCustom|useLogo</item>
    </style>

    <!-- actionbar title text style -->
    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/t2</item>
    </style>

    <!-- actionbar menu text style -->
    <style name="ActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/t2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/bg_activity</item>
    </style>

    <!-- main activity style -->
    <style name="MainActivityStyle" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/MainActivity.ActionBarStyle</item>
        <item name="android:windowBackground">@drawable/bg_activity</item>
        <!-- item name="windowActionBarOverlay">true</item -->
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="MainActivity.ActionBarStyle" parent="MyActionBarStyle">
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- text and color style -->

	<!-- custom check box -->
	<style name="CompoundButton.CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_custom</item>
    </style>
    
</resources>