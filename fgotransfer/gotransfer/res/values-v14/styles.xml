<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!-- API 14 theme customizations can go here. -->
        <!--item name="android:actionBarStyle">@style/MyActionBarStyle</item-->
        <!--item name="android:actionBarDivider">@android:color/transparent</item-->
        <!--item name="android:homeAsUpIndicator">@android:color/transparent</item-->
        <!--item name="android:actionBarItemBackground">@android:color/transparent</item-->
        <!--item name="android:actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item-->
        <!--item name="android:actionMenuTextColor">@android:color/white</item-->
        <item name="switchStyle">@style/MySwitchStyle</item>
    </style>
    
    <style name="MySwitchStyle" parent="Widget.Holo.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="thumb">@drawable/switch_thumb</item>
        <item name="switchTextAppearance">@style/MySwitchStyle.switchTextAppearance</item>
        <item name="textOn">@string/switch_on</item>
        <item name="textOff">@string/switch_off</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
    </style>
    
    <style name="MySwitchStyle.switchTextAppearance" parent="TextAppearance.Holo.Widget.Switch">
        <item name="android:textColor">@color/textcolor_switch</item>
    </style>

    <!-- actionbar style -->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:icon">@drawable/transparent</item>
        <item name="android:logo">@drawable/ic_actionbar_back_selector</item>
        <item name="android:background">@color/c8_actionbar</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <!-- item name="android:displayOptions">homeAsUp|showHome|showCustom|useLogo</item-->
    </style>
    
    <!-- actionbar title text style -->
    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/t2</item>
    </style>
    
    <!-- actionbar menu text style -->
    <style name="ActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/t2</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- main activity style -->
    <style name="MainActivityStyle" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/bg_activity</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MainActivity.ActionBarStyle" parent="MyActionBarStyle">
        <item name="android:logo">@drawable/ic_logo</item>
    </style>
    
    <style name="MainActivity.ActionBarStyle.MenuTextStyle" 
        	parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/t2</item>
    </style>
    
</resources>
